
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="padding-top:100px">
    <div class="row">
        <div class="col-md-12">
            <div class="titlepage">
                <h2 style="text-align:center">Trang Thống Kê</h2>
            </div>
        </div>
        <div class="side_bar_blog col-md-3">
            <h4>Quản Lý</h4>
            <div class="categary">
                <ul>
                    <li><a href="@Url.Action("Index","AdminHome",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Trang Chủ Admin</a></li>
                    <li><a href="@Url.Action("Index","Finance",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Trang Thống Kê</a></li>
                    <li><a href="@Url.Action("Index","Company",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Công Ty</a></li>
                    <li><a href="@Url.Action("Index","Brand",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Hãng Của Công Ty</a></li>
                    <li><a href="@Url.Action("Index","Product",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Sản Phẩm</a></li>
                    <li><a href="@Url.Action("Index","User",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Tài Khoản</a></li>
                    <li><a href="@Url.Action("Index","Order",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Đơn Hàng</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-9" style="margin-top:30px">
            <form action="@Url.Action("GetMonth","Finance")">
                <label>Tháng</label>
                <select name="Month">
                    @foreach (var month in ViewBag.months)
                    {
                        <option value="@(ViewBag.count++)">@month</option>
                    }
                </select>
                <input type="submit" value="Duyệt" />
            </form>
            @if (@ViewBag.month == null)
            {
                <h1>@ViewBag.alert</h1>
            }
            else
            {
                <div class="col-lg-9 float-left">
                    <table class="table table-bordered">
                        <tr>
                            <th colspan="2"><h5 class="center">2020</h5><h6 class="center">@ViewBag.oneMonth</h6></th>
                        </tr>
                        <tr>
                            <td>Day</td>
                            <td>OutCome ToTal Per Day</td>
                        </tr>
                        @foreach (var item in ViewBag.test1)
                        {
                            <tr>
                                <td>@(ViewBag.countDays++)</td>
                                <td>@item</td>
                            </tr>
                        }
                        <tr>
                            <td>Month Outcome Total</td>
                            <td>@ViewBag.monthOutcome</td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    </div>
</div>


