<!-- brand -->
<div class="brand">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>Sản phẩm chúng tôi</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="brand-bg">
        <div class="container">
            <div class="row">
                @foreach (var item in ViewData["random"] as IEnumerable<TMDT_Web.Models.Domain.Product>)
                {
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 margin">
                        <div class="brand_box">
                            <img src="~/Images/Products/@item.Image" alt="img" />
                            <h3><strong class="red">@item.Price</strong> VND</h3>
                            <span>@item.ProductName</span>
                            <a href="@Url.Action("Detail","home",new { id=item.ProductID})">Chi tiết!</a>
                            <a class="read-more" href="@Url.Action("Buy","Cart",new { id=item.ProductID})">Thêm Vào Giỏ</a>
                        </div>
                    </div>
                }
                <div class="col-md-12">
                    <a href="@Url.Action("Menu","Home")" class="read-more">See More</a>
                </div>
            </div>
        </div>
    </div>
</div>

