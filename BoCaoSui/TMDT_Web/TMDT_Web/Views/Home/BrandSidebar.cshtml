@using PagedList.Mvc;
@{
    ViewBag.Title = "BrandSidebar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- inner page banner -->
<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Shop Page</h1>
                            <ol class="breadcrumb">
                                <li><a href="@Url.Action("Index","Home", new { area=""})">Home</a></li>
                                <li class="active">Menu</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->
<!-- Danh sách sản phẩm & side bar -->
<div class="section padding_layout_1 product_list_main">
    <div class="container">
        <div class="row">
            div class="brand col-md-9">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="titlepage">
                            <h2>Sản phẩm chúng tôi</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="brand-bg">
                <div class="container">
                    <div class="row">
                        @foreach (var item in ViewData["BrandSidebar"] as IEnumerable<TMDT_Web.Models.Domain.Product>)
                        {
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 margin">
                                <div class="brand_box">
                                    <img src="~/Images/Products/@item.Image" alt="img" />
                                    <h3><strong class="red">@item.Price</strong> VND</h3>
                                    <span>@item.ProductName</span>
                                    <a href="@Url.Action("Detail","home",new { id=item.ProductID})">Chi tiết!</a>
                                    <a class="read-more" href="@Url.Action("Buy","Cart",new { id=item.ProductID})">Thêm Vào Giỏ</a>
                                </div>
                            </div>
                        }
                        <br />
                        <div class="center col-md-12 col-sm-6 col-xs-12 margin_bottom_30_all">
                            @foreach (var item in ViewData["BrandSidebar"] as PagedList.IPagedList<TMDT_Web.Models.Domain.Product>)
                            {
                                @Html.PagedListPager(ViewData["BrandSidebar"] as PagedList.IPagedList<TMDT_Web.Models.Domain.Product>, page => Url.Action("BrandSidebar", "Home", new { brandsidebar = item.BrandID, page }))
                                break;
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Side bar -->
        <div class="col-md-3">
            <div class="side_bar">
                <div class="side_bar_blog">
                    <h4>Laptop Companies</h4>
                    <div class="categary">
                        <ul>
                            @foreach (var item in ViewBag.SideBar)
                            {
                                <li><a href="@Url.Action("CompanySidebar","Home", new { companysidebar=item.CompanyID})"><i class="fa fa-angle-right"></i>@item.CompanyName</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="side_bar">
                <div class="side_bar_blog">
                    <h4>Laptop Brands</h4>
                    <div class="categary">
                        <ul>
                            @foreach (var item in ViewBag.SideBarBrand)
                            {
                                <li><a href="@Url.Action("BrandSidebar","Home", new { brandsidebar=item.BrandID})"><i class="fa fa-angle-right"></i>@item.BrandName</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Kết side bar -->
    </div>
</div>
</div>
<!-- Kết ds sản phẩm -->
