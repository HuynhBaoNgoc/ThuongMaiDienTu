@model IEnumerable<Final.Models.LoginManage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title" style="font-weight:800">Login Manage</h3>
                    <div class="box-tools">
                        <div class="input-group">

                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr style="font-family:sans-serif">
                            <th>
                                User
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeLogin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeLogout)
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeLogin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeLogout)
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="@Url.Action("Delete","LoginManages", new { id = item.LoginManageKey  })"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section><!-- /.content -->