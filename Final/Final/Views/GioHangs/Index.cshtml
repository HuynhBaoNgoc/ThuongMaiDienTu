@model IEnumerable<Final.Models.GioHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title" style="font-weight:800">Categories</h3>
                    <div class="box-tools">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <a class="pull-right btn btn-sm btn-default" href="@Url.Action("Create","GioHangs")"><i class="fa fa-plus"></i><span style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"> Create</span></a>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr style="font-family:sans-serif">
                            <th>
                                @Html.DisplayNameFor(model => model.KhachHang.TenKH)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sach.TenSach)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoLuong)
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sach.TenSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Edit","GioHangs", new { id = item.MaGioHang })"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-info" href="@Url.Action("Details","GioHangs", new { id = item.MaGioHang })"><i class="fa fa-info"></i></a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete","GioHangs", new { id = item.MaGioHang })"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section><!-- /.content -->