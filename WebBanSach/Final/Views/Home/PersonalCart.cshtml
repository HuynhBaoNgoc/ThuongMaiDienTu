
@{
    ViewBag.Title = "PersonalCart";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <main>
        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Your Order</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--================ confirmation part start =================-->
        <section class="confirmation_part section_padding">
            <div class="container">
                @if (ViewBag.message != null)
                {
                    <a class="text-info text-center" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;text-decoration:none;font-size:20px;padding:20px" href="@Url.Action("Index","Home")">
                        @ViewBag.message
                    </a>
                }
                else
                {
                    
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="order_details_iner">
                                    <h2 style="color:unset">Your Order</h2>
                                    <h3>Name : @Session["UserName"].ToString()</h3>
                                    <h3>Address : @Session["UserAddress"].ToString()</h3>
                                    <table class="table table-borderless">
                                        <thead>
                                            <tr>
                                                <th scope="col" colspan="2">Product</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">Total</th>
                                            </tr>
                                        </thead>
                                        @foreach (var item in ViewBag.ds)
                                        {
                                            <tbody>
                                                <tr>
                                                    <th colspan="2"><span>@item.TenSach</span></th>
                                                    <th>@item.DonGia $</th>
                                                    <th align="center" style="margin-left:5px">@item.SoLuong</th>
                                                    <th> <span style="color:red">@item.ThanhTien.ToString("#,##0").Replace(',', '.') $</span></th>
                                                </tr>
                                            </tbody>

                                        }
                                        </table>
                                </div>
                            </div>
                        </div>
                    }


                </div>
        </section>
        <!--================ confirmation part end =================-->
    </main>

